<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/styles.css">
    <script src="js/script.js" defer></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <title>Profil</title>
</head>
<header class="main-header">
    <div class="main-header-content">
        <a class="title-logo" id="clearData" href="/">Logo</a>
        <nav class="nav-links">
                <ul>
                    <li><a href="/profil">Accueil</a></li>
                    <li><a href="/spots">Explore</a></li>
                    <li><a href="/spots/new">Créer</a></li>
                    <li><a href="">Guide</a></li>
                    <li><a href="">Évènements</a></li>
                    <li><a href="">Discussions</a></li>
                </ul>
        </nav>
        <div class="nav-right">
                <i class="bi bi-bell"></i>
                <div class="nav-separator"></div>
                <img class="image-profil-user" src="img/image-user@2x.png" alt="">
                <p id="userName"><%= name %></p>
        </div>
    </div>
</header> 

<% spots.forEach(spot => { %>
    <h3><%= spot.name%> </h3>
    <p><%= spot._id %> </p>

    <p><%= spot.description%> </p>
    <p><%= spot.difficulty%> </p>
    <p><%= spot.coordinates %> </p>
    <form action="/spots/delete/<%= spot._id  %>" method="get">
        <button type="submit">Delete</button>
        </form>
    <form action="/spots/edit/<%= spot._id  %>" method="get">
        <button type="submit">Edit</button>
        </form>
    
     <% }) %> 
           






