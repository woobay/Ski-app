<%- include ('partials/header'); %>
    <main>
        <form action="/spots/new" method="post">
            <div class="container-newspot grid">
                <!-- Nom du parcours -->
                <div class="col-10 margin-bottom-28">
                    <h1 class="margin-bottom-48">Créer un nouveau parcours</h1>
                    <h3 class="margin-bottom-32">Nom et coordonnées géographiques</h3>
                    <p class="margin-bottom-1em">Lorem ipsum dolor sit amet consectetur adipisicing elit.</p>
                    <label for="nom-parcours">Nom du parcours (obligatoire)</label>
                    <div class="input-field">
                        <input class="input-newspot" id="spotName" type="" name="name" placeholder="Écrire le nom du parcours" autofocus>
                        <div class="error" id="errorSpotName">Veuillez entrer un nom de parcours</div>
                    </div>
                </div>
                <!-- Localisation du parcours -->
                <div class="col-5">
                    <h3 class="margin-bottom-1em">Localisation du parcours</h3>
                    <p class="margin-bottom-1em">Indiquer la localisation de l'itinéraire en entrant les informations
                        ci-dessous.</p>
                    <label for="localisation">Localisation (obligatoire)</label>
                    <div class="input-field margin-bottom-32">
                        <input id="locationName" type="" name="address" placeholder="Écrire la localisation">
                        <div class="error" id="errorLocationName">Veuillez entrer la localisation du parcours</div>
                        <i class="bi bi-geo-alt" id="">
                            
                        </i>
                    </div>
                    <!-- Localisation section gauche: mini-grille -->
                    <div class="mini-grid margin-bottom-64">
                        <h4 class="margin-bottom-8 col-12">Montée</h4>
                        <div class="mini-col-5a">
                            <label for="latitude">Latitude (obligatoire)</label>
                            <div class="input-field margin-bottom-32">
                                <input class="input-newspot" id="latitude" type="" name="left" placeholder="Écrire la latitude">
                                <div class="error" id="errorLatitude">Veuillez entrer la latitude</div>
                            </div>
                        </div>
                        <div class="mini-col-5b">
                            <label for="latitude">Longitude (obligatoire)</label>
                            <div class="input-field">
                                <input class="input-newspot" id="longitude" type="" name="right"
                                placeholder="Écrire la longitude">
                                <div class="error" id="errorLongitude">Veuillez entrer la longitude</div>
                            </div>
                        </div>
                        <h4 class="margin-bottom-8 col-12">Descente</h4>
                        <div class="mini-col-5a">
                            <label for="latitude">Latitude</label>
                            <div class="input-field">
                                <input class="input-newspot" id="" type="" name="" placeholder="Écrire la localisation">
                            </div>
                        </div>
                        <div class="mini-col-5b">
                            <label for="latitude">Longitude</label>
                            <div class="input-field">
                                <input class="input-newspot" id="" type="" name="" placeholder="Écrire la longitude">
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Localisation section droite: itinéraire -->
                <div class="col-5b">
                    <!-- <div class="itineraire"></div> -->
